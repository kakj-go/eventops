---- server ----
// run minio server in linux
minio server /root/data

---- client ----
// set alias
mc alias set kakj_minio http://192.168.0.109:9000 nf9SdeSrq7R4ffct fPnttv7iWo5MQytu1IJ6SpK39078ED52

// mk eventops buckets
mc mb kakj_minio/eventops

// create echo_value file
echo "hello world input file value" > /root/echo_value

// cp file to buckets
mc cp /root/echo_value kakj_minio/eventops/test
